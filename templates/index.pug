<!-- Modal -->

<!-- login -->
div(class="modal fade" id="login" tabindex="-1" role="dialog" aria-hidden="true")
  div(class="modal-dialog modal-dialog-centered" role="document")
    div(class="modal-content")
      div(class="modal-header")
        h5(class="modal-title" id="") login
        button(type="button" class="close" data-dismiss="modal" aria-label="Close")
          span(aria-hidden="true") &times;
      div(class="modal-body")
        form(method="post" action="/login")
          div(class="form-group row")
            label(for="" class="col-sm-2 col-form-label") Email
            div(class="col-sm-10")
              input(type="email" name="email" class="form-control" id="login-email" placeholder="email@example.com")
          div(class="form-group row")
            label(for="password" class="col-sm-2 col-form-label") Password
            div(class="col-sm-10")
              input(type="password" name="password" class="form-control" id="login-password" placeholder="password")
          button(type="submit" class="btn btn-primary float-right") login
      div(class="modal-footer")

<!-- signup -->
div(class="modal fade" id="signup" tabindex="-1" role="dialog" aria-hidden="true")
  div(class="modal-dialog modal-dialog-centered" role="document")
    div(class="modal-content")
      div(class="modal-header")
        h5(class="modal-title" id="") Create an   account
        button(type="button" class="close" data-dismiss="modal" aria-label="Close")
          span(aria-hidden="true") &times;
      div(class="modal-body")
        div(id="error-alerts")
        //- div(class="alert alert-danger" role="alert")
        form(method="post" action="/signup" id="signupForm")
          div(class="form-group row")
            label(for="fullname" class="col-sm-2 col-form-label") Fullname
            div(class="col-sm-10")
              input(type="text" name="fullname" class="form-control" id="signup-fullname" placeholder="fullname")
          div(class="form-group row")
            label(for="email" class="col-sm-2 col-form-label") Email
            div(class="col-sm-10")
              input(type="email" name="email" class="form-control" id="signup-email" placeholder="email@example.com")
          div(class="form-group row")
            label(for="password" class="col-sm-2 col-form-label") Password
            div(class="col-sm-10")
              input(type="password" name="password" class="form-control" id="signup-password" placeholder="password")
          div(class="form-group row")
            label(for="confirmPassword" class="col-sm-2 col-form-label")
            div(class="col-sm-10")
              input(type="password" name="confirmPassword" class="form-control" id="signup-confirm" placeholder="Confirm password")
          button(type="submit" class="btn btn-primary float-right") Sign up
        
      div(class="modal-footer")
        
